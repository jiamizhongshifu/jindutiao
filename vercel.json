{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/payment-success",
      "dest": "/public/payment-success.html"
    },
    {
      "src": "/payment-cancel",
      "dest": "/public/payment-cancel.html"
    },
    {
      "src": "/(.*)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}

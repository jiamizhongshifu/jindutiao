{
  "functions": {
    "api/plan-tasks.py": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/payment-success",
      "destination": "/public/payment-success.html"
    },
    {
      "source": "/payment-cancel",
      "destination": "/public/payment-cancel.html"
    },
    {
      "source": "/password-reset",
      "destination": "/api/password-reset"
    },
    {
      "source": "/password-reset/(.*)",
      "destination": "/api/password-reset"
    },
    {
      "source": "/email-verified",
      "destination": "/api/email-verified"
    },
    {
      "source": "/email-verified/(.*)",
      "destination": "/api/email-verified"
    },
    {
      "source": "/(.*).html",
      "destination": "/public/$1.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}

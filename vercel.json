{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/email-verified",
      "dest": "/public/email-verified.html"
    },
    {
      "src": "/payment-success",
      "dest": "/public/payment-success.html"
    },
    {
      "src": "/payment-cancel",
      "dest": "/public/payment-cancel.html"
    },
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    }
  ]
}

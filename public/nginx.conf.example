# GaiYa 官网 Nginx 配置示例
# 将此配置添加到你的 Nginx 服务器配置中

server {
    listen 80;
    listen [::]:80;
    server_name gaiya.cloud www.gaiya.cloud;

    # 网站根目录(根据实际情况调整)
    root /var/www/gaiya.cloud/public;
    index index.html;

    # ✅ 关键配置1: 确保 JSON 文件正确的 MIME 类型
    location ~* \.json$ {
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin *;  # 如果需要跨域访问
    }

    # ✅ 关键配置2: locales 目录访问权限
    location /locales/ {
        try_files $uri =404;
        add_header Content-Type application/json;
        add_header Cache-Control "public, max-age=3600";  # 缓存1小时
    }

    # 主页面配置
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 静态资源缓存
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # HTTPS 重定向(可选,推荐)
    # return 301 https://$server_name$request_uri;
}

# HTTPS 配置(可选,推荐)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name gaiya.cloud www.gaiya.cloud;

    # SSL 证书配置
    ssl_certificate /path/to/your/fullchain.pem;
    ssl_certificate_key /path/to/your/privkey.pem;

    root /var/www/gaiya.cloud/public;
    index index.html;

    # 同上面的配置
    location ~* \.json$ {
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin *;
    }

    location /locales/ {
        try_files $uri =404;
        add_header Content-Type application/json;
        add_header Cache-Control "public, max-age=3600";
    }

    location / {
        try_files $uri $uri/ /index.html;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}
